<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewUserActivity">

    <TextView
        android:id="@+id/writePhoneAndAdress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Täytä vielä osoite\n ja puhelinnumero"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/addressBox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/writePhoneAndAdress"
        android:layout_centerHorizontal="true"
        android:hint="Täytä osoite"
        android:ems="10"/>

    <EditText
        android:id="@+id/phoneBox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/addressBox"
        android:layout_centerHorizontal="true"
        android:hint="Täytä puhelinnumero"
        android:ems="10"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phoneBox"
        android:layout_centerHorizontal="true"
        android:onClick="finalizeRegistration"
        android:text="Jatka" />

</RelativeLayout>